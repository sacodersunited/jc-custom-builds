---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<div
  class="h-40 md:h-60 bg-gradient-to-r from-gray-200 via-gray-400 to-gray-600n grid place-items-center mb-16"
>
  <h1 class="text-center text-slate-800 text-3xl md:text-5xl font-serif">
    {title}
  </h1>
</div>
